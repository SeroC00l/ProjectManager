datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int       @id @default(autoincrement())
  name       String?
  email      String    @unique
  password   String
  phone      String?
  provider   String?
  createdAt  DateTime  @default(now())
  lastSignIn DateTime?
  userUID    String?
  projects   Project[]
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tasks       Task[]
  members     User[]
}

model Task {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  status      String   @default("To Do")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id])
}
